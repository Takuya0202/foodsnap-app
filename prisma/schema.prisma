generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model profile {
  id Int @id @default(autoincrement())

  userId String  @unique @db.Uuid // Supabase Authのユーザーuuidを挿入
  name   String
  role   String
  icon   String? // nullを許可

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Store {
  id String @id @default(cuid())

  userId  String @unique @db.Uuid // Supabase Authのユーザーuuidを挿入
  name    String // 店舗名
  address String // 住所
}
